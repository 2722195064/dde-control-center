#!/usr/bin/make -f
include /usr/share/dpkg/default.mk

export QT_SELECT = qt5
DEB_BUILD_ARCH ?= $(shell dpkg-architecture -qDEB_BUILD_ARCH)
%:
	dh $@ --parallel

ifeq ($(DEB_BUILD_ARCH), mips64el)
override_dh_auto_configure:
	dh_auto_configure -- DCC_ENABLE_AUTOSTART=YES DCC_DISABLE_OPACITY_ANIMATION=YES
endif

ifeq ($(DEB_BUILD_ARCH), mipsel)
override_dh_auto_configure:
	dh_auto_configure -- DCC_ENABLE_AUTOSTART=YES DCC_DISABLE_OPACITY_ANIMATION=YES
endif

ifeq ($(DEB_BUILD_ARCH), sw_64)
override_dh_auto_configure:
	dh_auto_configure -- DCC_ENABLE_AUTOSTART=YES \
			     DCC_KEEP_SETTINGS_LIVE=YES \
		             DCC_DISABLE_OPACITY_ANIMATION=YES \
			     DCC_DISABLE_MIRACAST=YES \
			     DCC_DISABLE_TIMEZONE=YES \
			     DCC_DISABLE_KBLAYOUT=YES \
			     DCC_DISABLE_GRUB=YES \
			     DCC_DISABLE_LANGUAGE=YES \
			     DISABLE_SYS_UPDATE_MIRRORS=YES
endif
