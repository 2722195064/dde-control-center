KeyboardLayoutDelegate QLabel{
    font-size: 12px;
    color: #b4b4b4;
}

KeyboardLayoutDelegate QLabel:hover{
    color: white;
}

Dtk--Widget--DSegmentedControl#LetterList{
    border: none;
    color: #b4b4b4;
}

Dtk--Widget--DSegmentedControl#LetterList Dtk--Widget--DSegmentedHighlight{
    background-color: transparent;
    border: none;
}

Dtk--Widget--DSegmentedControl#LetterList QToolButton:enabled{
    color: #b4b4b4;
    font-size: 12px;
    font-weight: normal;
}

Dtk--Widget--DSegmentedControl#LetterList QToolButton:hover{
    color: #2CA7F8;
}

Dtk--Widget--DSegmentedControl#LetterList QToolButton{
    background: transparent;
    color: #2CA7F8;
    font-size: 17px;
    border: none;
    font-weight: bold;
}
